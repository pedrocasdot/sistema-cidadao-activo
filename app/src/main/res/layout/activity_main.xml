<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Background gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Logo Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_report"
                    android:contentDescription="SCA Logo"
                    app:tint="@color/primary_color" />

            </androidx.cardview.widget.CardView>

            <!-- Title Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistema CidadÃ£o Activo"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCA"
                android:textSize="18sp"
                android:textColor="@color/primary_light"
                android:layout_marginBottom="32dp"
                android:letterSpacing="0.2" />

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Partilha de OcorrÃªncias AnÃ³malas na Comunidade"
                        android:textSize="16sp"
                        android:textColor="@color/gray_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="4dp" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:background="@color/primary_color"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Entrar no Sistema"
                android:textSize="16sp"
                android:textStyle="bold"
                android:onClick="ir"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/secondary_color"
                app:icon="@drawable/ic_report"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp" />

            <!-- Footer Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Contribua para uma comunidade mais segura"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Registar OcorrÃªncia"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xlarge"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:backgroundTint="@color/primary_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_large"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:src="@drawable/ic_report"
                    android:layout_marginEnd="@dimen/spacing_large"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Registar Nova OcorrÃªncia"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Description Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescriÃ§Ã£o da OcorrÃªncia"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="@dimen/input_field_corner_radius"
                    app:boxCornerRadiusTopEnd="@dimen/input_field_corner_radius"
                    app:boxCornerRadiusBottomStart="@dimen/input_field_corner_radius"
                    app:boxCornerRadiusBottomEnd="@dimen/input_field_corner_radius">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editDescricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descreva detalhadamente a situaÃ§Ã£o anÃ³mala..."
                        android:minLines="4"
                        android:maxLines="6"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:textSize="@dimen/text_size_medium"
                        android:padding="@dimen/spacing_medium" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Location Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LocalizaÃ§Ã£o Atual"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <TextView
                    android:id="@+id/textLocationStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obtendo localizaÃ§Ã£o atual..."
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/gray_text"
                    android:padding="@dimen/spacing_medium"
                    android:background="@drawable/rounded_background"
                    android:drawablePadding="@dimen/spacing_medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Urgency Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NÃ­vel de UrgÃªncia"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="@dimen/spacing_large" />

                <RadioGroup
                    android:id="@+id/radioGroupUrgencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioUrgente"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="ðŸ”´ Urgente"
                        android:textColor="@color/urgent_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium"
                        android:padding="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioNaoUrgente"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="ðŸŸ¡ NÃ£o Urgente"
                        android:textColor="@color/normal_color"
                        android:textSize="@dimen/text_size_medium"
                        android:padding="@dimen/spacing_medium"
                        android:checked="true" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Evidence Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Capturar EvidÃªncia"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <Button
                        android:id="@+id/btnTirarFoto"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="Tirar Foto"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:drawableTop="@drawable/ic_camera"
                        android:drawablePadding="@dimen/spacing_medium"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btnGravarVideo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="Gravar VÃ­deo"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:drawableTop="@drawable/ic_videocam"
                        android:drawablePadding="@dimen/spacing_medium"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageViewFoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            android:contentDescription="Foto da ocorrÃªncia" />

                        <VideoView
                            android:id="@+id/videoViewVideo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Nenhuma evidÃªncia capturada"
                            android:gravity="center"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/text_size_medium"
                            android:background="@color/light_gray" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LocalizaÃ§Ã£o serÃ¡ capturada automaticamente via GPS"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/gray_text"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Registar OcorrÃªncia"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

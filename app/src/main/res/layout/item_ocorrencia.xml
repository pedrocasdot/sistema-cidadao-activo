<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewOcorrencia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with urgency -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconUrgencia"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_priority_high" />

            <TextView
                android:id="@+id/textUrgencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URGENTE"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/urgent_color" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/textDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição da ocorrência"
            android:textSize="15sp"
            android:textColor="@color/text_primary"
            android:paddingHorizontal="16dp"
            android:paddingBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginHorizontal="16dp" />

        <!-- Footer with date and share count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_schedule"
                android:layout_marginEnd="6dp"
                app:tint="@color/gray_text" />

            <TextView
                android:id="@+id/textDataHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024 10:30"
                android:textSize="12sp"
                android:textColor="@color/gray_text" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_share"
                android:layout_marginEnd="6dp"
                app:tint="@color/gray_text" />

            <TextView
                android:id="@+id/textContadorPartilha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1x"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:minWidth="24dp"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
